<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:text="Coffee App Screens"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4E342E"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOnboarding"
        android:text="Onboarding Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#795548"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnHome"
        android:text="Home Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6D4C41"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDetail"
        android:text="Detail Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5D4037"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnOrder"
        android:text="Order Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4E342E"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDelivery"
        android:text="Delivery Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E2723"
        android:textColor="@android:color/white"/>
</LinearLayout>
