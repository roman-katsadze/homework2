<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="32dp"
    android:gravity="center">

    <!-- Hero Image -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/coffee_hero"
        android:scaleType="centerCrop"
        android:contentDescription="Coffee illustration"
        android:layout_marginBottom="40dp" />

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fall in Love with"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee in Blissful"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delight!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Description Text -->
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Welcome to our cozy coffee corner, where every cup is delightful for you."
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        android:paddingTop="24dp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp" />

    <!-- Get Started Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/coffee_brown"
        android:textColor="@color/white"
        app:cornerRadius="25dp" />

</LinearLayout>